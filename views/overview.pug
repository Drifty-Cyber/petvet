extends base
//- REMEMBER DOWNLOAD PET IMAGES 17 PETS || 18 IN VIEW & LOGO IN PNG FORMAT & RENDER PET IMAGES

block content 
    main.main 
        .card-container

            each pet in pets
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/tour-1-cover.jpg`, alt=`${pet.name}`)
                        h3.heading-tertirary
                            span= pet.name

                    .card__details
                        h4.card__sub-heading= `${pet.personality} personality`
                        p.card__text= `${pet.size} sized pet`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-info')
                            span= pet.color
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span= `${pet.age} year old`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-eye')
                            span= pet.breed
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= pet.gender

                    .card__footer
                        p
                            span.card__footer-value= `$${pet.cost}`
                            | 
                            span.card__footer-text per pet
                        p.card__ratings
                            span.card__footer-value= `${pet.ratingsAverage}`
                            | 
                            span.card__footer-text= `rating (${pet.ratingsQuantity})`
                        a.btn.btn--green.btn--small(href=`/pet/${pet.slug}`) Details